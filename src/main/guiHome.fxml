<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="rootPane"
	xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="main.ControllerHome">
	<children>
		<GridPane fx:id="gridPaneHome" prefHeight="500.0"
			prefWidth="750.0" style="-fx-background-color: #2145D9;">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="10.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="10.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Button fx:id="generateTitle" mnemonicParsing="false"
					onAction="#onClickGenerateTitleStage" prefWidth="140.0"
					text="Generate title" GridPane.columnIndex="1"
					GridPane.halignment="LEFT" GridPane.rowIndex="2" />
				<Button fx:id="generateDescription" mnemonicParsing="false"
					prefWidth="140.0" text="Generate description"
					GridPane.columnIndex="3" GridPane.halignment="RIGHT"
					GridPane.rowIndex="2" />
				<Button fx:id="storedFilms" mnemonicParsing="false"
					prefWidth="140.0" text="Stored films" GridPane.columnIndex="2"
					GridPane.halignment="CENTER" GridPane.rowIndex="4"
					GridPane.valignment="CENTER" />
				<Button fx:id="storedTitles" mnemonicParsing="false"
					prefWidth="200.0" text="Separately stored titles"
					GridPane.columnIndex="1" GridPane.halignment="CENTER"
					GridPane.rowIndex="4" GridPane.valignment="TOP" />
				<Button fx:id="storedDescriptions" mnemonicParsing="false"
					prefWidth="200.0" text="Separatly stored descriptions"
					GridPane.columnIndex="3" GridPane.halignment="CENTER"
					GridPane.rowIndex="4" GridPane.valignment="TOP" />
				<Button fx:id="options" mnemonicParsing="false"
					prefWidth="80.0" text="Options" GridPane.columnIndex="1"
					GridPane.halignment="CENTER" GridPane.rowIndex="5"
					GridPane.valignment="TOP" />
				<Button fx:id="exit" mnemonicParsing="false"
					onAction="#onClickExit" prefWidth="80.0" text="Exit"
					GridPane.columnIndex="3" GridPane.halignment="CENTER"
					GridPane.rowIndex="5" GridPane.valignment="TOP" />
				<Button fx:id="generateFilm" mnemonicParsing="false"
					prefWidth="140.0" text="Generate film" textAlignment="CENTER"
					GridPane.columnIndex="2" GridPane.halignment="CENTER"
					GridPane.valignment="BOTTOM" />
				<ImageView fitHeight="176.0" fitWidth="274.0"
					GridPane.columnIndex="2" GridPane.halignment="CENTER"
					GridPane.rowIndex="2" GridPane.valignment="CENTER">
					<image>
						<Image url="@../logo.png" />
					</image>
				</ImageView>
			</children>
		</GridPane>
	</children>
</AnchorPane>
