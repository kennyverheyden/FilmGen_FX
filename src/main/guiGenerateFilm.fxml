<GridPane fx:id="gridPaneGenerateTitle" prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: #2145D9;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
  <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Button fx:id="back" mnemonicParsing="false" onAction="#onClickExit" prefWidth="120.0" text="Back to main menu" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
      <Button fx:id="save" mnemonicParsing="false" onAction="#onClickSave" text="Save to Database" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
      <Text fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="GENERATE FILM" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font name="Arial Black" size="24.0" />
         </font>
      </Text>
      <Text fx:id="titleText" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="PLACE HOLDER" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Text>
      <Text fx:id="descriptionText" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="A placeholder placeholder where a placeholder and a placeholder who must hold in a place" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font>
      </Text>
      <Button fx:id="generatetitle" mnemonicParsing="false" onAction="#onClickGenerateTitle" text="Generate another title" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
      <Button fx:id="generatedescription" mnemonicParsing="false" onAction="#onClickGenerateDescription" text="Generate another description" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
   </children>
</GridPane>
