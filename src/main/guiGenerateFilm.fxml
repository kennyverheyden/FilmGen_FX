<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="generateFilmPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ControllerGenerateFilm">
	<children>
		<GridPane fx:id="gridPaneGenerateTitle" prefHeight="700" prefWidth="950" style="-fx-background-color: #2145D9;">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Text fx:id="titleText" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="GENERATE FILM" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
					<font>
						<Font name="Arial Black" size="32.0" />
					</font>
				</Text>
				<Text fx:id="descriptionText" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="A placeholder placeholder where a placeholder and a placeholder who must hold in a place" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
					<font>
						<Font name="Arial Black" size="18.0" />
					</font>
				</Text>
				<Button fx:id="btnGeneratetitle" mnemonicParsing="false" onAction="#onClickGenerateTitle" text="Generate another title" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
				<Button fx:id="btnGeneratedescription" mnemonicParsing="false" onAction="#onClickGenerateDescription" text="Generate another description" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
				<Button fx:id="btnSaveToDB" mnemonicParsing="false" onAction="#onClickSaveToDB" text="Save to database" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
				<Button fx:id="btnBackToMain" mnemonicParsing="false" onAction="#onClickToMain" text="Back to main" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
			</children>
		</GridPane>
	</children>
</AnchorPane>
