<AnchorPane fx:id="optionSubjectsPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerOptionSubjects">
	<children>
		<GridPane fx:id="gridPaneOptionSubjects" prefHeight="700" prefWidth="950" style="-fx-background-color: #2145D9;">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="210.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Button fx:id="backToMain" mnemonicParsing="false" onAction="#onClickToMain" prefWidth="90.0" text="Back to main" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP" />
            <ListView fx:id="listview" centerShape="false" prefHeight="200.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="3" GridPane.valignment="CENTER" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onClickDelete" prefWidth="90.0" text="Delete" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="TOP" />
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onClickAdd" prefWidth="90.0" text="Add" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5" GridPane.valignment="TOP" />
            <Label contentDisplay="CENTER" prefHeight="53.0" prefWidth="243.0" text="Edit subjects" textFill="YELLOW" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onClickBack" prefWidth="90.0" text="Back" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="TOP" />
			</children>
		</GridPane>
	</children>
